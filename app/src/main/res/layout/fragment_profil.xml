<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greycustom2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="-1dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/ic_user_w" />

                <TextView
                    android:id="@+id/Txvlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Silahkan Masuk/Daftar untuk mengakses semua fitur"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/Llauth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/corner_rad"
                        android:backgroundTint="#FFA726"
                        android:text="Masuk"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/btDaftar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/corner_rad"
                        android:backgroundTint="#FFA726"
                        android:text="Daftar"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Txusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ClMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shadow_200"
                android:backgroundTint="#F1F1F1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <Button
                    android:id="@+id/btProfil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="    Profil"
                    android:textAllCaps="false"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/btRiwayat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="    Riwayat"
                    android:textAllCaps="false"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btProfil" />

<!--                <Button-->
<!--                    android:id="@+id/btKeranjang"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"-->
<!--                    android:backgroundTint="#FFFFFF"-->
<!--                    android:fontFamily="@font/lato_bold"-->
<!--                    android:gravity="left|center_vertical"-->
<!--                    android:paddingLeft="15dp"-->
<!--                    android:paddingTop="5dp"-->
<!--                    android:paddingBottom="5dp"-->
<!--                    android:text="    Menu3"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textColor="#6B6B6B"-->
<!--                    android:textSize="14sp"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/btRiwayat" />-->

                <Button
                    android:id="@+id/btAbout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="    Tentang Kami"
                    android:textAllCaps="false"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btRiwayat" />

                <Button
                    android:id="@+id/btLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="    Logout"
                    android:textAllCaps="false"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btAbout" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--<TextView-->
            <!--android:id="@+id/activityTitle3"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="80dp"-->
            <!--android:textAlignment="center"-->
            <!--android:textSize="30sp" />-->
        </LinearLayout>

    </RelativeLayout>



</FrameLayout>